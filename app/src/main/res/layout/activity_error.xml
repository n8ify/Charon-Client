<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation._base.activity.ErrorActivity">

    <TextView
            android:text="@string/exception"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_error_title" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="24dp"
            android:textStyle="bold"
            android:gravity="center" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.467"/>

    <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/went_wrong" app:layout_constraintStart_toStartOf="@+id/tv_error_title"
            app:layout_constraintEnd_toEndOf="@+id/tv_error_title" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/tv_error_title"
            android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>